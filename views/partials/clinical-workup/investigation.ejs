<script type="text/javascript">
  $(document).ready(function () {
      var counter = 1;

      $("#addinvestigation").on("click", function () {
          var newRow = $("<tr>");
          var cols = "";

          cols += '<td><input type="text" class="form-control" name="investigationSl"/></td>';
          cols += '<td><input type="text" class="form-control" name="investigationName"/></td>';

          cols += '<td><input type="button" class="del-investigation-btn btn btn-md btn-danger "  value="Delete"></td>';
          newRow.append(cols);
          $("#investigationtable").append(newRow);
          counter++;
      });


      $("table#investigationtable").on("click", ".del-investigation-btn", function (event) {
          $(this).closest("tr").remove();
          counter -= 1
      });
  });


  function calculateRow(row) {
      var price = +row.find('input[name^="price"]').val();

  }

  function calculateGrandTotal() {
      var grandTotal = 0;
      $("table#investigationtable").find('input[name^="price"]').each(function () {
          grandTotal += +$(this).val();
      });
      $("#grandtotal").text(grandTotal.toFixed(2));
  }

</script>
