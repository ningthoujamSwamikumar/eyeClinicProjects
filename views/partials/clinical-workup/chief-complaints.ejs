          cols += '<td><input type="text" class="form-control" name="complainOnset"/></td>';
          cols += '<td><input type="text" class="form-control" name="complainCurrent"/></td>';

          cols += '<td><input type="button" class="del-complain-btn btn btn-md btn-danger "  value="Delete"></td>';
          newRow.append(cols);
          $("#complaintable").append(newRow);
          counter++;
      });


      $("table#complaintable").on("click", ".del-complain-btn", function (event) {
          $(this).closest("tr").remove();
          counter -= 1
      });
  });


