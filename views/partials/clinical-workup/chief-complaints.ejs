<script type="text/javascript">
  $(document).ready(function () {
      var counter = 1;

      $("#addcomplain").on("click", function () {
          var newRow = $("<tr>");
          var cols = "";

          cols += '<td><input type="text" class="form-control" name="complainSl"/></td>';
          cols += '<td><input type="text" class="form-control" name="complainEye"/></td>';
          cols += '<td><input type="text" class="form-control" name="complainDescription"/></td>';
