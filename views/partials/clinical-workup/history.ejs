<script type="text/javascript">
  $(document).ready(function () {
      var counter = 1;

      $("#addhistory").on("click", function () {
          var newRow = $("<tr>");
          var cols = "";

          cols += '<td><input type="text" class="form-control" name="historySl"/></td>';
          cols += '<td><input type="text" class="form-control" name="historyOcularHistory"/></td>';
          cols += '<td><input type="text" class="form-control" name="historyMedicalHistory"/></td>';

          cols += '<td><input type="button" class="del-history-btn btn btn-md btn-danger "  value="Delete"></td>';
          newRow.append(cols);
          $("#historytable").append(newRow);
          counter++;
      });


      $("table#historytable").on("click", ".del-history-btn", function (event) {
          $(this).closest("tr").remove();
          counter -= 1
      });
  });


