<script type="text/javascript">
  $(document).ready(function () {
      var counter = 1;

      $("#adddiagnosis").on("click", function () {
          var newRow = $("<tr>");
          var cols = "";

          cols += '<td><input type="text" class="form-control" name="diagnosisSl"/></td>';
          cols += '<td><input type="text" class="form-control" name="diagnosisEye"/></td>';
          cols += '<td><input type="text" class="form-control" name="diagnosisDescription"/></td>';

          cols += '<td><input type="button" class="del-diagnosis-btn btn btn-md btn-danger "  value="Delete"></td>';
          newRow.append(cols);
          $("#diagnosistable").append(newRow);
          counter++;
      });


      $("table#diagnosistable").on("click", ".del-diagnosis-btn", function (event) {
          $(this).closest("tr").remove();
          counter -= 1
      });
  });


  function calculateRow(row) {
      var price = +row.find('input[name^="price"]').val();

  }

  function calculateGrandTotal() {
      var grandTotal = 0;
      $("table#diagnosistable").find('input[name^="price"]').each(function () {
          grandTotal += +$(this).val();
      });
      $("#grandtotal").text(grandTotal.toFixed(2));
  }

</script>
