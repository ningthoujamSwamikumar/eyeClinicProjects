
<div class="">
    <div class="form-row">
      <div class="col col-9">
        <label for="fullname">Full Name: </label>
        <input type="text" class="form-control fullname" name="fullname" placeholder="Enter Full Name" value="" autocomplete="off">
      </div>
      <div class="col">
        <label for="date-time">Date: </label>
        <input type="text" class="form-control date-time" name="datetime" value="" readonly>
      </div>
      </div>
      <div class="form-row pt-2">
        <div class="col col-9">
          <label for="address">Address: </label>
          <input type="text" class="form-control address" name="address" placeholder="Enter Postal Address" autocomplete="off">
        </div>
        <div class="col">
          <label for="age-sex">Age/Sex: </label>
          <input type="text" class="form-control age-sex" name="agesex" placeholder="example: 24/F" autocomplete="off">
        </div>
      </div>
</div>

<script type="text/javascript">
  $(".date-time").attr("value", ()=>{
    const now = new Date();
    const currentDate = now.toLocaleDateString("en-US", {day:"numeric", month:"short", year:"numeric"});
    const currentTime = now.toLocaleTimeString();
    return (currentDate + " " + currentTime);
  })
</script>
