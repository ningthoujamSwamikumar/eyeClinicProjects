<div class="">
  <form class="" action="/dashboard/patient/save" method="post">
    
    <div class="addPatientData">
      <ul class="nav nav-tabs" id="add-sub-tab" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" id="personal-details-tab" data-toggle="tab" href="#personal-details" role="tab" aria-controls="personal-details" aria-selected="true">Personal Details</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="clinical-workup-tab" data-toggle="tab" href="#clinical-workup" role="tab" aria-controls="clinical-workup" aria-selected="false">Clinical Work Up</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="rx-prescription-tab" data-toggle="tab" href="#rx-prescription" role="tab" aria-controls="rx-prescription" aria-selected="false">Drug Prescription (Rx.)</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="glass-prescription-tab" data-toggle="tab" href="#glass-prescription" role="tab" aria-controls="glass-prescription" aria-selected="false">Glass Prescription</a>
        </li>
      </ul>


      <div class="tab-content" id="add-sub-tab-content">
        <div class="tab-pane fade show active" id="personal-details" role="tabpanel" aria-labelledby="personal-details-tab">

          <div class="p-2 border mt-3" id="">
            <%- include('personal-details'); -%>
          </div>

        </div>
        <div class="tab-pane fade" id="clinical-workup" role="tabpanel" aria-labelledby="clincial-workup-tab">

          <div class="p-2 border mt-3 ">
            <%- include("clinical-workup-content"); -%>
          </div>


        </div>
        <div class="tab-pane fade" id="rx-prescription" role="tabpanel" aria-labelledby="rx-prescription-tab">

            <div class="p-2 border mt-3">
              <%- include("prescription/rx"); -%>
            </div>


        </div>
        <div class="tab-pane fade" id="glass-prescription" role="tabpanel" aria-labelledby="glass-prescription-tab">

            <div class="p-2 border mt-3">
              <%- include("prescription/glass"); -%>
              <button type="submit" class="btn btn-block btn-primary">
                Submit Patient Data
              </button>
            </div>


        </div>
      </div>
    </div>
  </form>

</div>
